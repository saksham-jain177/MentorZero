# MentorZero Environment Configuration Example
# Copy this file to .env and fill in your keys

# General Settings
MZ_APP_ENV=dev
MZ_LOG_LEVEL=INFO

# LLM Providers (Ollama)
MZ_OLLAMA_HOST=http://localhost:11434
MZ_OLLAMA_MODEL=llama2-uncensored:7b
MZ_OLLAMA_TIMEOUT_SECONDS=90.0

# Search API Keys (Required for real-time web search)
MZ_TAVILY_API_KEY=your_tavily_key_here
MZ_SERPER_API_KEY=your_serper_key_here
MZ_ARXIV_ENABLED=true

# Intelligence & Specialization
# Set a niche to bias research results (e.g., "AI", "Biotech", "Fintech")
MZ_NICHE_FOCUS=

# Database & Storage
MZ_DB_PATH=./data/mentorzero.db
MZ_FAISS_INDEX_PATH=./data/faiss.index
MZ_FAISS_META_PATH=./data/faiss_meta.json

# RAG & Retrieval Settings
MZ_RAG_TOP_K=5
MZ_RAG_USE_RERANKER=false
MZ_RAG_DISABLE_DENSE=true

# Optimization Agents
AZL_PASS_THRESHOLD=0.75
AZL_MAX_ATTEMPTS=2
AZL_DAILY_BUDGET=200
